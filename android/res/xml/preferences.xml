<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  	xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
    	android:title="Voice"
        android:key="voice">
	
		<ListPreference
        	android:title="Change voice"
            android:summary="Change the gender of the voice"
            android:key="listPrefVoice"
            android:defaultValue="female"
            android:entries="@array/listArrayVoice"
            android:entryValues="@array/listValuesVoice" />
	</PreferenceCategory>
	<PreferenceCategory
    	android:title="Audio"
        android:key="mute">
        
        <ListPreference
        	android:title="Mute breathe audio"
            android:summary="This preference allows to mute/unmute the audio"
            android:key="listPrefMute"
            android:defaultValue="no"
            android:entries="@array/listArrayMute"
            android:entryValues="@array/listValuesMute" />
   	</PreferenceCategory>
   	
   	<PreferenceCategory
    	android:title="Vibration"
        android:key="vibrate">
        
        <ListPreference
        	android:title="Turn on vibration"
            android:summary="This preference allows you to turn on/off vibration"
            android:key="listPrefVibrate"
            android:defaultValue="no"
            android:entries="@array/listArrayVibrate"
            android:entryValues="@array/listValuesVibrate" />
   	</PreferenceCategory>
   	
   	<PreferenceCategory
    	android:title="Anonymous"
        android:key="anonymous">
        
        <ListPreference
        	android:title="Send anonymous data"
            android:summary="This preference allows you to toggle anonymous data upload"
            android:key="listPrefAnonymous"
            android:defaultValue="yes"
            android:entries="@array/listArrayAnonymous"
            android:entryValues="@array/listValuesAnonymous" />
   	</PreferenceCategory>
</PreferenceScreen>
